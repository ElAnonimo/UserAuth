<!DOCTYPE html>
<html>
	<head>
		<!--STYLES-->
		<link rel="stylesheet" href="/styles/angular-toastr.css">
		<link rel="stylesheet" href="/styles/app.css">
		<link rel="stylesheet" href="/styles/foundation.css">
		<link rel="stylesheet" href="/styles/importer.css">
		<!--STYLES END-->
	</head>
	
	<body ng-app="SignupMod" ng-controller="SignupCtrl">
		<div class="large-4 large-centered columns">
			<div class="signup-box">
				<div class="row">
					<div class="large-12 columns">
						<h2 class="text-center">UserAuth</h2>
						<p class="text-center">Please fill in the field below to sign up</p>
						<form ng-submit="runSignup()">
							<div class="row">
								<div class="large-12 columns">
									<input ng-model="name" ng-maxlength="40" type="text" name="name" placeholder="Name" required></input>
								</div>
							</div>
							<div class="row">
								<div class="large-12 columns">
									<input ng-model="email" type="email" name="email" placeholder="Email address" required></input>
								</div>
							</div>
							<div class="row">
								<div class="large-12 columns">
									<input ng-model="password" ng-maxlength="20" type="password" name="password" placeholder="Password" required></input>
								</div>
							</div>
							<div class="row">
								<div class="large-12 columns">
									<input ng-model="password2" ng-maxlength="20" type="password" name="password2" placeholder="Confirm Password" required></input>
								</div>
							</div>
							<div class="row">
								<div class="large-7 columns">
									<input type="submit" class="button expand" value="Create Account"></input>
								</div>
								<div class="large-5 columns">
									<a class="button expand">Log in</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
		
	<!--SCRIPTS-->
	<script src="/js/dependencies/sails.io.js"></script>
	<script src="/js/dependencies/jquery-1.11.3.min.js"></script>
	<script src="/js/dependencies/angular.js"></script>
	<script src="/js/dependencies/angular-toastr.js"></script>
	<script src="/js/dependencies/angular-toastr.tpls.js"></script>
	<script src="/js/dependencies/foundation.min.js"></script>
	<script src="/js/public/signup/SignupMod.js"></script>
	<script src="/js/public/signup/SignupCtrl.js"></script>
	<script src="/js/public/login/LoginMod.js"></script>
	<script src="/js/public/login/LoginCtrl.js"></script>
	<script src="/js/private/dashboard/DashMod.js"></script>
	<script src="/js/private/dashboard/DashCtrl.js"></script>
	<!--SCRIPTS END-->
	</body>
</html>